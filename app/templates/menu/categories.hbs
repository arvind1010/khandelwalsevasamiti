<a href="#" class="dropdown-toggle" data-toggle="dropdown">By Category <b class="caret"></b></a>
<ul class="dropdown-menu">
	{{#each models}}
		{{#if children.length}}
			<li class="dropdown-submenu">
        <a href="/catalog/1?category={{id}}">{{name}}</a>
        <ul class="dropdown-menu">
          <li><a href="/catalog/1?category={{id}}">View All</a></li>
        	{{#each children}}
          	<li><a href="/catalog/1?category={{id}}">{{name}}</a></li>
          {{/each}}
        </ul>
      </li>
    {{else}}  
    	<li><a href="/catalog/1?category={{id}}">{{name}}</a></li>
		{{/if}}
	{{/each}}
</ul>