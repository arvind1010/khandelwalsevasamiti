<a href="#" class="dropdown-toggle" data-toggle="dropdown">By Collection <b class="caret"></b></a>
<ul class="dropdown-menu">
	{{#each models}}
		{{#if children.length}}
			<li class="dropdown-submenu">
        <a href="/catalog/1?coll_subcat={{id}}_0">{{name}}</a>
        <ul class="dropdown-menu">
          <li><a href="/catalog/1?coll_subcat={{id}}_0">View All</a></li>
        	{{#each children}}
          	<li class="dropdown-submenu">
              <a href="/catalog/1?coll_subcat={{id}}_0">{{name}}</a>
              {{view 'menu/subcategories' collection_name="Categories" param_name="collection_id" param_value=id lazy="true"}}
            </li>
          {{/each}}
        </ul>
      </li>
    {{else}}
    	<li class="dropdown-submenu">
        <a href="/catalog/1?coll_subcat={{id}}_0">{{name}}</a>
        {{view 'menu/subcategories' collection_name="Categories" param_name="collection_id" param_value=id lazy="true"}}
      </li>
		{{/if}}
	{{/each}}
</ul>